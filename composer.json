{
    "name": "ypgyan/php-api-rest",
    "description": "API Rest com php sem a utilização de frameworks",
    "authors": [
        {
            "name": "Yan de Paula Gonçalves",
            "email": "yanw100@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Lib\\": "lib",
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "symfony/dotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "phpunit": "./vendor/bin/phpunit tests --do-not-cache-result",
        "phpcs": "phpcs --standard=PSR12 -n app lib tests"
    }
}